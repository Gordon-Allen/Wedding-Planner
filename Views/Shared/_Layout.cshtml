<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WeddingPlanner</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <style>
        body {
                background: rgb(238,174,202);
                background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
        }

        .navbar{
            position: fixed;
            background-color: rgb(255, 255, 255, 0.8);
            width: 100%;
            border-radius: 8px;
        }
        .navbar-brand h2{
            display: inline-block;
            font-size: 27.5px;
            font-family: cursive;
            margin-top: 2.5px;
        }

        .navbar-brand h4{
            display: inline-block;
            font-size: 17.5px;
            font-family: cursive;
            margin-top: 1px;

        }

        .navbar-brand {
            color: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
        }
        .navbar button{
            background-color: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);;
            color: white;
            font-weight: bold;
            border-radius: 5px;
            font-size: 18px;
            border-color: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);;
            width: 100px;
        }
        .nav navbar-nav li a{
            color: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
            font-family: cursive;
            font-size: 22.5px;

        }
        nav navbar-nav li a:hover {
            display: none;
        }


    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="height: 60px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="User" asp-action="Index" class="navbar-brand" style="font-size: 25px;"><img src="~/images/weddingplannerlogo.png" alt="Wedding Planner Logo" style="width: 45px; height: 45px; display: inline-block; margin-top: -15px;"/><h2>Wedding Planner</h2></a>
                @if(ViewBag.IsLoggedIn != false)
                {
                    <ul class="nav navbar-nav">
                        <li><a asp-controller="User" asp-action="Index" class="navbar-brand" style="margin-left: -15px; font-size: 16px; padding-top: 25px;"><h4>Dashboard</h4></a></li>
                        <li><a asp-controller="Wedding" asp-action="NewWedding" class="navbar-brand" style="margin-left: -17.5px; font-size: 16px; padding-top: 25px;"><h4>Create A Wedding</h4></a></li>
                        <li><a asp-controller="User" asp-action="Logout" class="navbar-brand" style="margin-left: -17.5px; font-size: 16px; padding-top: 25px;"><h4>Log-Out</h4></a></li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <br><br><br>
    <div class="container body-content">
        @RenderBody()
    </div>

    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

</body>
</html>
