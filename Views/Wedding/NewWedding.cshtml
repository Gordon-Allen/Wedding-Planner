@model Wedding

<h1>Plan Your Wedding</h1>
<a asp-controller="User" asp-action="Dashboard">Dashboard</a> | <a asp-controller="User" asp-action="Logout">Logout</a>
<br><br>
<form asp-action="btAddWed" asp-controller="Wedding" method="POST">
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Wedder One</label>
        <br><span asp-validation-for="WedderOne"></span>
        <div class="col-sm-10">
            <input asp-for="WedderOne" type="text" class="form-control" id="inputEmail3" placeholder="Jane Doe">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Wedder Two</label>
        <br><span asp-validation-for="WedderTwo"></span>
        <div class="col-sm-10">
            <input asp-for="WedderTwo" type="text" class="form-control" id="inputEmail3" placeholder="John Doe">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Date</label>
        <br><span asp-validation-for="WeddingDate"></span>
        <div class="col-sm-10">
            <input asp-for="WeddingDate" type="text" class="form-control selector" placeholder="XX/XX/2019 00:00 AM/PM">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Wedding Address</label>
        <br><span asp-validation-for="WeddingAddress"></span>
        <div class="col-sm-10">
            <input asp-for="WeddingAddress" type="text" class="form-control" id="inputEmail3" placeholder="1234 Memory Lane Chicago, IL 12345">
        </div>
        <input asp-for="UserId" type="hidden" value="@ViewBag.Userid">
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
<script>
    $( ".selector" ).datepicker({
     minDate: new Date(),
     changeYear: true
});
</script>