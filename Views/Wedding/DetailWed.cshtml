<h1 style="text-align:center; text-decoration-line: underline; font-weight: bolder;">@ViewBag.WeddingInfo.WedderOne's & @ViewBag.WeddingInfo.WedderTwo's Wedding</h1>
<br>

<div class="container">
    <div class="row">
        <div class="col-sm-6" style="border: 7px solid rgb(255, 255, 255, 0.5); border-radius: 5px; margin-right: 50px; width: 450px; height: 500;">
            <h2 style="text-decoration-line: underline;">Date/Time of Wedding</h2>
            <ul>
                <li>@ViewBag.WeddingInfo.WeddingDate</li>
            </ul>
            <h2 style="text-decoration-line: underline;">Wedding Address</h2>
            <ul>
                <li>@ViewBag.WeddingInfo.WeddingAddress</li>
            </ul>
                <h2 style="text-decoration-line: underline;">Guest List</h2>
                <ul>
                    <li>(@ViewBag.ListGuest.WeddingtoUser.Count) RSVP's
                <ul>
                    @foreach(var i in ViewBag.ListGuest.WeddingtoUser){
                    <li>
                        @i.User.FirstName @i.User.LastName
                    </li>
                    }
                </ul>
                </li>
                </ul>
        </div>
        <div class="col-sm-6" style="border: 7px solid rgb(255, 255, 255, 0.5); border-radius: 5px; width: 650px; padding: 0px;">
            <div id="dvMap" style="height:500px; width:auto;"></div>
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
            <script type="text/javascript"
                src="https://maps.googleapis.com/maps/api/js?libraries=places&key=ENTER-GOOGLE-MAPS-API-KEY-HERE&callback=initMap"
                async defer></script>
            <script type="text/javascript">
                function initMap() {
                    var map = new google.maps.Map(document.getElementById('dvMap'), {
                        center: {
                            lat: @ViewBag.Lati,
                            lng: @ViewBag.Long
                },
                zoom: 15
                });
                var marker = new google.maps.Marker({
                    position: {
                        lat: @ViewBag.Lati,
                lng: @ViewBag.Long
                },
                map: map,
                    draggable: true
                });
                google.maps.event.addListener(marker, 'dragend', function () {
                    var Lats = marker.getPosition().lat();
                    var Longs = marker.getPosition().lng();
                    $('#Lat').val(Lats);
                    $('#Long').val(Longs);
                });
                }
            </script>
        </div>
    </div>
</div>