@model User

    <div class="twocolumn">
        <h1>Registration</h1>
        
        <form asp-action="Register" asp-controller="User" method="POST">
            <table class="table">
                <tr>
                    <td>First Name <br><span asp-validation-for="FirstName" style="color: red;"></span></td>
                    <td><input type="text" asp-for="FirstName"></td>
                </tr>
                 <tr>
                    <td>Last Name <br><span asp-validation-for="LastName" style="color: red;"></span></td>
                    <td><input type="text" asp-for="LastName"></td>
                </tr>
                <tr>
                    <td>Email <br><span asp-validation-for="Email" style="color: red;"></span></td>
                    <td><input type="text" asp-for="Email"></td>
                </tr>
                <tr>
                    <td>Password <br><span asp-validation-for="Password" style="color: red;"></span></td>
                    <td><input type="password" asp-for="Password"></td>
                </tr>
                <tr>
                    <td>Confirm Password </td>
                    <td><input type="password" asp-for="ConfirmPassword" style="color: red;"></td>
                </tr>
            </table>
            
            <input class="bt" type="submit" value="Register">
        </form>
    </div>
    <div class="twocolumn">
        <partial name="Login"/>
    </div>